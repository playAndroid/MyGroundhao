<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card:cardCornerRadius="5dp"
    card:cardElevation="10dp">
    <!--cardMaxElevation：最大卡片阴影的宽度-->
    <!--cardElevation:卡片阴影的宽度-->
    <!--cardBackgroundColor:卡片的背景颜色-->
    <!--cardCornerRadius ：卡片的圆角半径-->
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/image_icon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!--<com.facebook.drawee.view.SimpleDraweeView-->
            <!--android:id="@+id/image_icon"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--fresco:failureImage="@drawable/error"-->
            <!--fresco:failureImageScaleType="centerInside"-->
            <!--fresco:placeholderImage="@drawable/ic_loading_large"-->
            <!--fresco:placeholderImageScaleType="fitXY"-->
            <!--fresco:roundedCornerRadius="5dp" />-->
            <!--android:scaleType="fitXY"-->

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#bb555555"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:padding="8dp"
                android:text="是标题我是标题是标题我是标题是标题我是标题是标题我是标题"
                android:textColor="@color/title_color_wite"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxEms="10"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="我是作者我是作者我是作者我是作者我是作者我是作者"
                android:textColor="@color/title_color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_look_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_author"
                android:maxEms="10"
                android:singleLine="true"
                android:text="浏览次数"
                android:textColor="@color/title_color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:text="分享"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>