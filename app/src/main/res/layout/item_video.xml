<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:failureImage="@drawable/error"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/ic_loading_large"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundedCornerRadius="5dp"
            fresco:viewAspectRatio="0.8" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:text="我是标题"
            android:textColor="@color/content_color"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_oo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:maxEms="10"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="OO"
                android:textColor="@color/title_color_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_oo"
                android:maxEms="10"
                android:singleLine="true"
                android:text="10sp"
                android:textColor="@color/title_color_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_speck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_xx"
                android:maxEms="10"
                android:singleLine="true"
                android:text="吐槽"
                android:textColor="@color/title_color_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_more_horiz_grey600_24dp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>